@using Recodme.Rd.JadeRest.WebApi.Models.MenuViewModels
@model MealViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Meal - New</h2>

<hr />
<div class="row">
    <form asp-action="Create" class="p1-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartingHours" class="control-label"></label>
            <input asp-for="StartingHours" class="form-control" />
            <span asp-validation-for="StartingHours" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndingHours" class="control-label"></label>
            <input asp-for="EndingHours" class="form-control" />
            <span asp-validation-for="EndingHours" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
